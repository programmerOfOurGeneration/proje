generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Kullanici {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  isim      String?
  resim     String?
  mesajlar  Mesaj[]
  createdAt DateTime  @default(now())
}

model Mesaj {
  id         Int      @id @default(autoincrement())
  icerik     String
  kullanici  Kullanici @relation(fields: [kullaniciId], references: [id])
  kullaniciId Int
  createdAt  DateTime @default(now())
}

model Etkinlik {
  id          Int      @id @default(autoincrement())
  baslik      String
  aciklama    String
  tarih       DateTime
  konum       String?
  resimUrl    String?
  createdAt   DateTime @default(now())
}
